{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="container mt-5" style="max-width: 400px;">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <div class="card shadow">
            <div class="card-body">
                <h1 class="h4 mb-4 text-center">Reset your password</h1>
                {{ form_start(requestForm) }}
                    <div class="mb-3">
                        {{ form_label(requestForm.email) }}
                        {{ form_widget(requestForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter your email'}}) }}
                        {{ form_errors(requestForm.email) }}
                    </div>
                    <div class="mb-3">
                        <small class="form-text text-muted">
                            Enter your email address, and we will send you a
                            link to reset your password.
                        </small>
                    </div>
                    <button class="btn btn-primary w-100" type="submit">Send password reset email</button>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
{% endblock %}
